            Case "H01_"

              pname11 = Right(item, -4)

            Case "H02_"

              pname12 = Right(item, -4)

            Case "H03_"

              pname13 = Right(item, -4)

            Case "H04_"

              pname14 = Right(item, -4)

            Case "H05_"

