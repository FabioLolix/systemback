Private Sub rpsync()

  Dim ofile As File
  Dim elmod As Date
  Dim elist As New String[]
  Dim usr, cline, item, cdir, fdir, exitem, dtime, eusr, egrp, eauth, excl As String
  Dim esize As Long
  Dim anum, cnum As Integer
  Dim cperc, pperc As Byte
  Dim nxt As Boolean

  ofile = Open "/etc/passwd" For Read
  While Not Eof(ofile)
    Line Input #ofile, cline

    If cline Like "*:/home/*"

      usr = Left(cline, InStr(cline, ":") - 1)

      If IsDir("/home/" & usr)

        anum = anum + RDir("/home/" & usr, ".*").Count

      Endif

    Endif

  Wend

  If IsDir("/root") Then anum = anum + RDir("/root", ".*").Count
  If IsDir("/bin") Then anum = anum + RDir("/bin").Count
  If IsDir("/boot") Then anum = anum + RDir("/boot").Count
  If IsDir("/etc") Then anum = anum + RDir("/etc").Count
  If IsDir("/lib") Then anum = anum + RDir("/lib").Count
  If IsDir("/lib32") Then anum = anum + RDir("/lib32").Count
  If IsDir("/lib64") Then anum = anum + RDir("/lib64").Count
  If IsDir("/opt") Then anum = anum + RDir("/opt").Count
  If IsDir("/sbin") Then anum = anum + RDir("/sbin").Count
  If IsDir("/selinux") Then anum = anum + RDir("/selinux").Count
  If IsDir("/srv") Then anum = anum + RDir("/srv").Count
  If IsDir("/usr") Then anum = anum + RDir("/usr").Count
  If IsDir("/var") Then anum = anum + RDir("/var").Count
  File.Save(tmp & "pointpercent", 0)

  dtime = Application.Args[2]
  Mkdir fsdir & "/.S00_" & dtime
  Mkdir fsdir & "/.S00_" & dtime & "/home"

  With Stat("/home")

    Chmod fsdir & "/.S00_" & dtime & "/home" To .Auth
    Chown fsdir & "/.S00_" & dtime & "/home" To .User
    Chgrp fsdir & "/.S00_" & dtime & "/home" To .Group

  End With

  With elist

    .Add(".gvfs")
    .Add(".cache/gvfs")
    .Add(".local/share/Trash/files/")
    .Add(".local/share/Trash/info/")
    .Add(".Xauthority")

    ofile = Open "/etc/systemback.excludes" For Read
    While Not Eof(ofile)
      Line Input #ofile, cline

      If Left(cline, 1) = "." Then .Add(cline)

    Wend
    Close #ofile

  End With

  ofile = Open "/etc/passwd" For Read
  While Not Eof(ofile)
    Line Input #ofile, cline

    If cline Like "*:/home/*"

      usr = Left(cline, InStr(cline, ":") - 1)

      If IsDir("/home/" & usr)

        Mkdir fsdir & "/.S00_" & dtime & "/home/" & usr

        With Stat("/home/" & usr)

          Chmod fsdir & "/.S00_" & dtime & "/home/" & usr To .Auth
          Chown fsdir & "/.S00_" & dtime & "/home/" & usr To .User
          Chgrp fsdir & "/.S00_" & dtime & "/home/" & usr To .Group

        End With

        For Each item In RDir("/home/" & usr, ".*")

          cnum = cnum + 1
          cperc = Int(cnum / anum * 100)

          If Not Exist(tmp & "pointpercent") And cperc > pperc

            File.Save(tmp & "pointpercent", cperc)
            pperc = cperc

          Endif

          If nxt = True Then nxt = False

          For Each excl In elist

            If item Begins excl Or item Ends "~"

              nxt = True
              Break

            Endif

          Next

          If nxt = False

            With Stat("/home/" & usr & "/" & item)

              Select Case True

                Case .Type = gb.Link

                  Link .Link To fsdir & "/.S00_" & dtime & "/home/" & usr & "/" & item
                  Continue

                Case .Type = gb.Directory

                  Mkdir fsdir & "/.S00_" & dtime & "/home/" & usr & "/" & item

                Case .Type = gb.File

                  If .Size > 8000000

                    Continue

                  Else

                    For Each exitem In Dir(fsdir, "[SH][01][0-9]_*", gb.Directory)

                      If Exist(fsdir & "/" & exitem & "/home/" & usr & "/" & item)

                        With Stat(fsdir & "/" & exitem & "/home/" & usr & "/" & item)

                          esize = .Size
                          elmod = .LastModified
                          eusr = .User
                          egrp = .Group
                          eauth = .Auth

                        End With

                        If esize = .Size And elmod = .LastModified And eusr = .User And egrp = .Group And eauth = .Auth

                          Hlink(fsdir & "/" & exitem & "/home/" & usr & "/" & item, fsdir & "/.S00_" & dtime & "/home/" & usr & "/" & item)
                          Break

                        Endif

                      Endif

                    Next

                    If Exist(fsdir & "/.S00_" & dtime & "/home/" & usr & "/" & item)

                      Continue

                    Else

                      Copy "/home/" & usr & "/" & item To fsdir & "/.S00_" & dtime & "/home/" & usr & "/" & item
                      Tsync("/home/" & usr & "/" & item, fsdir & "/.S00_" & dtime & "/home/" & usr & "/" & item)

                    Endif

                  Endif

              End Select

              Try Chmod fsdir & "/.S00_" & dtime & "/home/" & usr & "/" & item To .Auth
              Try Chown fsdir & "/.S00_" & dtime & "/home/" & usr & "/" & item To .User
              Try Chgrp fsdir & "/.S00_" & dtime & "/home/" & usr & "/" & item To .Group

            End With

          Endif

        Next

      Endif

    Endif

  Wend
  Close #ofile

  If IsDir("/root")

    Mkdir fsdir & "/.S00_" & dtime & "/root"

    With Stat("/root")

      Chmod fsdir & "/.S00_" & dtime & "/root" To .Auth
      Chown fsdir & "/.S00_" & dtime & "/root" To .User
      Chgrp fsdir & "/.S00_" & dtime & "/root" To .Group

    End With

    For Each item In RDir("/root", ".*")

      cnum = cnum + 1
      cperc = Int(cnum / anum * 100)

      If Not Exist(tmp & "pointpercent") And cperc > pperc

        File.Save(tmp & "pointpercent", cperc)
        pperc = cperc

      Endif

      If nxt = True Then nxt = False

      For Each excl In elist

        If item Begins excl Or item Ends "~"

          nxt = True
          Break

        Endif

      Next

      If nxt = False

        With Stat("/root/" & item)

          Select Case True

            Case .Type = gb.Link

              Link .Link To fsdir & "/.S00_" & dtime & "/root/" & item
              Continue

            Case .Type = gb.Directory

              Mkdir fsdir & "/.S00_" & dtime & "/root/" & item

            Case .Type = gb.File

              If .Size > 8000000

                Continue

              Else

                For Each exitem In Dir(fsdir, "[SH][01][0-9]_*", gb.Directory)

                  If Exist(fsdir & "/" & exitem & "/root/" & item)

                    With Stat(fsdir & "/" & exitem & "/root/" & item)

                      esize = .Size
                      elmod = .LastModified
                      eusr = .User
                      egrp = .Group
                      eauth = .Auth

                    End With

                    If esize = .Size And elmod = .LastModified And eusr = .User And egrp = .Group And eauth = .Auth

                      Hlink(fsdir & "/" & exitem & "/root/" & item, fsdir & "/.S00_" & dtime & "/root/" & item)
                      Break

                    Endif

                  Endif

                Next

                If Exist(fsdir & "/.S00_" & dtime & "/root/" & item)

                  Continue

                Else

                  Copy "/root/" & item To fsdir & "/.S00_" & dtime & "/root/" & item
                  Tsync("/root/" & item, fsdir & "/.S00_" & dtime & "/root/" & item)

                Endif

              Endif

          End Select

          Try Chmod fsdir & "/.S00_" & dtime & "/root/" & item To .Auth
          Try Chown fsdir & "/.S00_" & dtime & "/root/" & item To .User
          Try Chgrp fsdir & "/.S00_" & dtime & "/root/" & item To .Group

        End With

      Endif

    Next

  Endif

  For Each item In Dir("/", "*", gb.Link)

    If item Begins "initrd.img" Or item Begins "vmlinuz" Then Link Stat("/" & item).Link To fsdir & "/.S00_" & dtime & "/" & item

  Next

  For Each cdir In ["/proc", "/run", "/sys", "/media", "/mnt", "/dev", "/tmp", "/cdrom"]

    If IsDir(cdir)

      Mkdir fsdir & "/.S00_" & dtime & cdir

      With Stat(cdir)

        Chmod fsdir & "/.S00_" & dtime & cdir To .Auth
        Chown fsdir & "/.S00_" & dtime & cdir To .User
        Chgrp fsdir & "/.S00_" & dtime & cdir To .Group

      End With

    Endif

  Next

  elist.Clear
  elist.Add("/var/lib/ureadahead/")
  elist.Add("/var/log/")
  elist.Add("/var/tmp/")
  elist.Add("/var/run/")
  elist.Add("/etc/mtab")

  For Each cdir In ["/bin", "/boot", "/etc", "/lib", "/lib32", "/lib64", "/opt", "/sbin", "/selinux", "/srv", "/usr", "/var"]

    If IsDir(cdir)

      Mkdir fsdir & "/.S00_" & dtime & cdir

      With Stat(cdir)

        Chmod fsdir & "/.S00_" & dtime & cdir To .Auth
        Chown fsdir & "/.S00_" & dtime & cdir To .User
        Chgrp fsdir & "/.S00_" & dtime & cdir To .Group

      End With

      For Each item In RDir(cdir)

        cnum = cnum + 1
        cperc = Int(cnum / anum * 100)

        If Not Exist(tmp & "pointpercent") And cperc > pperc

          File.Save(tmp & "pointpercent", cperc)
          pperc = cperc

        Endif

        If nxt = True Then nxt = False

        For Each excl In elist

          If cdir & "/" & item Begins excl Or cdir & "/" & item Like "/var/cache/apt/*.bin" Or cdir & "/" & item Like "/var/cache/apt/*.bin.*" Or cdir & "/" & item Like "/var/cache/apt/archives/*.deb" Or item Like "*{~,.dpkg-old}"

            nxt = True
            Break

          Endif

        Next

        If nxt = False

          With Stat(cdir & "/" & item)

            Select Case True

              Case .Type = gb.Link

                Link .Link To fsdir & "/.S00_" & dtime & cdir & "/" & item
                Continue

              Case .Type = gb.Directory

                Mkdir fsdir & "/.S00_" & dtime & cdir & "/" & item

              Case .Type = gb.File

                For Each exitem In Dir(fsdir, "[SH][01][0-9]_*", gb.Directory)

                  If Exist(fsdir & "/" & exitem & cdir & "/" & item)

                    With Stat(fsdir & "/" & exitem & cdir & "/" & item)

                      esize = .Size
                      elmod = .LastModified
                      eusr = .User
                      egrp = .Group
                      eauth = .Auth

                    End With

                    If esize = .Size And elmod = .LastModified And eusr = .User And egrp = .Group And eauth = .Auth

                      Hlink(fsdir & "/" & exitem & cdir & "/" & item, fsdir & "/.S00_" & dtime & cdir & "/" & item)
                      Break

                    Endif

                  Endif

                Next

                If Exist(fsdir & "/.S00_" & dtime & cdir & "/" & item)

                  Continue

                Else

                  Copy cdir & "/" & item To fsdir & "/.S00_" & dtime & cdir & "/" & item
                  Tsync(cdir & "/" & item, fsdir & "/.S00_" & dtime & cdir & "/" & item)

                Endif

            End Select

            Try Chmod fsdir & "/.S00_" & dtime & cdir & "/" & item To .Auth
            Try Chown fsdir & "/.S00_" & dtime & cdir & "/" & item To .User
            Try Chgrp fsdir & "/.S00_" & dtime & cdir & "/" & item To .Group

          End With

        Endif

      Next

    Endif

  Next

  If Exist("/etc/fstab")

    For Each item In Dir("/media", "[^.]*", gb.Directory)

      ofile = Open "/etc/fstab" For Read
      While Not Eof(ofile)
        Line Input #ofile, cline

        If Left(cline) <> "#" And If Replace(cline, "\\040", " ") Like "*[ \t]/media/" & item & "[ \t]*" Or Replace(cline, "\\040", " ") Like "*[ \t]/media/" & item & "/*"

          If fdir <> Null Then fdir = Null
          If nxt = True Then nxt = False

          For Each cdir In Split(Right(cline, - (InStr(cline, "/media/") + 6)), "/")

            If cdir <> Null

              If cdir Like "* *"

                If Left(cdir) = " " Then Break Else cdir = Left(cdir, InStr(cdir, " ") - 1)
                nxt = True

              Endif

              If cdir Like "*\t*"

                If Left(cdir) = "\t" Then Break Else cdir = Left(cdir, InStr(cdir, "\t") - 1)
                If nxt = False Then nxt = True

              Endif

              fdir &= "/" & Replace(cdir, "\\040", " ")

              If Not IsDir(fsdir & "/.S00_" & dtime & "/media/" & fdir)

                Mkdir fsdir & "/.S00_" & dtime & "/media/" & fdir

                With Stat("/media/" & fdir)

                  Chmod fsdir & "/.S00_" & dtime & "/media/" & fdir To .Auth
                  Chown fsdir & "/.S00_" & dtime & "/media/" & fdir To .User
                  Chgrp fsdir & "/.S00_" & dtime & "/media/" & fdir To .Group

                End With

              Endif

            Endif

            If nxt = True Then Break

          Next

        Endif

      Wend
      Close #ofile

    Next

  Endif

  For Each item In RDir("/var/log", "[^.]*")

    With Stat("/var/log/" & item)

      If .Type = gb.Directory

        Mkdir fsdir & "/.S00_" & dtime & "/var/log/" & item

      Else If .Type = gb.File And Right(item, 2) <> ".0" And Right(item, 2) <> ".1" And Right(item, 3) <> ".gz" And Right(item, 4) <> ".old"

        File.Save(fsdir & "/.S00_" & dtime & "/var/log/" & item, Null)

      Endif

      Try Chmod fsdir & "/.S00_" & dtime & "/var/log/" & item To .Auth
      Try Chown fsdir & "/.S00_" & dtime & "/var/log/" & item To .User
      Try Chgrp fsdir & "/.S00_" & dtime & "/var/log/" & item To .Group

    End With

  Next

  If Dfree(fsdir) < 104857600 Then Quit 1

End

Private Sub wprocwait()

  While wproc.State = Process.Running

    Wait 0.1

  Wend

End
