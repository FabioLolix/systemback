if [[ $UID == 0 ]]
then systemback
else
  tmpxauth=/tmp/sbXauthority-$RANDOM$RANDOM

  if [[ "$XAUTHORITY" ]]
  then cp -a "$XAUTHORITY" $tmpxauth
  elif [[ -f ~/.Xauthority ]]
  then cp -a ~/.Xauthority $tmpxauth
  else
    if which zenity >/dev/null
    then zenity --title=Systemback --error --text="Failed to start Systemback graphical user interface!\n\nCannot connect to X server."
    else kdialog --title=Systemback --error="Failed to start Systemback graphical user interface!\n\nCannot connect to X server."
    fi

    exit 1
  fi

  XAUTHORITY=$tmpxauth sudo -nH $1 /usr/bin/systemback authorization $USER
  rm -rf $tmpxauth
fi
